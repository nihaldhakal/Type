<% if @playing_as_guest %>
  <div id="guestNotice">PLAYING AS GUEST!</div>
<% end %>
<div id="barProgress" >
  <div id="newBar">
    <%= image_tag("car.jpg", size: '50*42', class: "float-right") %>
  </div>
</div>

<div class="input">
  <h1>
    <span id="displayedText"><%=@race.value%></span>
    <span class ="match"></span>
    <span class ="unmatch"></span>
  </h1>
</div>
<div>
  <input type = "text" class="form-control-lg" id="userInput" value="" >
</div>
<input type="reset" class="btn btn-primary" id="start" value="Reset">
<div>
  <p>WPM : <span id="checkWpm"> 0 </span></p>
</div>
<div class="hidden" id="showAccuracy">
  <p>Accuracy : <span id="accuracy"> 0 </span></p>
</div>
<div class="hidden" id="showResult">
 <p><a href="http://localhost:3000/participated_races/" style="color:red" > See results</a></p>
</div>


